{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd backend && python3 -m flask --app src.main run --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/api/health"
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": "/app/backend",
        "FLASK_ENV": "production"
      }
    }
  }
} 